SET NAMES UTF8;
DROP DATABASE IF EXISTS xz;
CREATE DATABASE xz CHARSET=UTF8;
USE xz;

--------------用户信息表----------------------

CREATE TABLE xz_login(
	uid INT PRIMARY KEY AUTO_INCREMENT,
	username VARCHAR(32),
	password VARCHAR(32),
	nickname VARCHAR(32),
	name VARCHAR(32),
	sex char(2),
	year VARCHAR(32),
	month VARCHAR(32),
	day VARCHAR(32),
	phone VARCHAR(32),
	email VARCHAR(32)
);

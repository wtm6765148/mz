--------------用户地址表----------------------

CREATE TABLE xz_address(
	id INT PRIMARY KEY AUTO_INCREMENT,
	uname VARCHAR(32),
	phone VARCHAR(32),
	shengfen VARCHAR(32),
        city VARCHAR(32),
	diqu VARCHAR(32),
	context VARCHAR(32),
	lid int , 
	foreign key (lid) references xz_login(uid)

);

SELECT * FROM xz_address;

